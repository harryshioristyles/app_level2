<div class="sidebar">

<%= render 'users/info', user: current_user %>

<main>
	<h2>Users</h2>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to "Show", user_path(user.id), class:"user_#{user.id}" %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
</main>