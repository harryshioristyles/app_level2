<main>
<h1>Editing Book</h1>
<!-- form_for部分 -->
  <%= form_for(@libro) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :book_name, class:"book_title" %>

    <h4>Body</h4>
    <%= f.text_area :caption, class:"book_body" %>

    <br><%= f.submit 'Update Book' %></br>

  <% end %>
</main>

<%= link_to "Show", book_path(@libro.id), class:"book_#{@libro.id}" %>
