<div class="container">
<div class="row">
  <div class="col-xs-4" style="background-color: orange;">

    <%= render 'users/info', user: current_user %>

  </div>

  <div class="col-xs-8" style="background-color: pink;">
	<h2>Books</h2>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>photo欄あとで消す！！</th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
					<td><%= link_to book_path(book.id), class: "book_#{book.id}" do %>
					<%= book.book_name %>
					    <% end %>
					</td>
					<td><%= book.caption %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
  </div>
</div>
</div>