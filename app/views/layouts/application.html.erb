<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="menu">
    <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li role="presentation">
        <span class="glyphicon glyphicon-home" aria-hidden="true">
          <%= link_to 'Home', user_path(current_user.id), class: "home" %>
        </span>
      </li>
      <li role="presentation">
        <span class="glyphicon glyphicon-user" aria-hidden="true">
          <%= link_to 'Users', users_path, class: "users" %>
        </span>
      </li>
      <li role="presentation">
        <span class="glyphicon glyphicon-book" aria-hidden="true">
          <%= link_to 'Books', books_path, class: "books" %>
        </span>
      </li>
      <li role="presentation">
        <span class="glyphicon glyphicon-log-out" aria-hidden="true">
          <%= link_to "logout", destroy_user_session_path, method: :delete, class: "logout" %>
        </span>
      </li>
    <% else %>
      <li role="presentation">
        <span class="glyphicon glyphicon-home" aria-hidden="true">
          <%= link_to 'Home', user_path(current_user.id), class: "home" %>
        </span>
      </li>
      <li role="presentation">
        <span class="glyphicon glyphicon-link" aria-hidden="true">
          <%= link_to 'About', home_about_path, class: "about" %>
        </span>
      </li>
      <li role="presentation">
        <span class="glyphicon glyphicon-edit" aria-hidden="true">
          <%= link_to "Sing up", new_user_registration_path, class: "sign_up" %>
        </span>
      </li>
      <li role="presentation">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true">
          <%= link_to "Sing in", new_user_session_path, class: "sign_in" %>
        </span>
      </li>
    <% end %>
    </ul>
    </div>

<% if flash[:notice] %>
<p id=notice><%= flash[:notice] %></p>
<% end %>
    <%= yield %>
  </body>
</html>
