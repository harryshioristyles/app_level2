<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-inverse">
  <div class="container">
   <nav class="nav navbar-nav navbar-left">
    <h3>Bookers</h3>
   </nav>
   <nav>
    <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
       <li role="presentation", class="icon" >
         <%= link_to user_path(current_user.id), class: "glyphicon glyphicon-home home" do %>
           <span aria-hidden="true"> Home</span>
         <% end %>
       </li>
       <li role="presentation">
         <%= link_to users_path, class: "glyphicon glyphicon-user users" do %>
            <span aria-hidden="true"> Users</span>
         <% end %>
      </li>
      <li role="presentation">
        <%= link_to books_path, class: "glyphicon glyphicon-book books" do %>
            <span aria-hidden="true"> Books</span>
         <% end %>
      </li>
      <li role="presentation">
         <%= link_to destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" do %>
            <span aria-hidden="true"> logout</span>
         <% end %>
      </li>
    <% else %>
      <li role="presentation">
         <%= link_to root_path, class: "glyphicon glyphicon-home home" do %>
            <span aria-hidden="true"> Home</span>
         <% end %>
      </li>
      <li role="presentation">
         <%= link_to home_about_path, class: "glyphicon glyphicon-link about" do %>
            <span aria-hidden="true"> About</span>
         <% end %>
      </li>
      <li role="presentation">
         <%= link_to new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" do %>
            <span aria-hidden="true"> sign_up</span>
         <% end %>
      </li>
      <li role="presentation">
         <%= link_to new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" do %>
            <span aria-hidden="true"> login</span>
         <% end %>
      </li>
    <% end %>
    </ul>
   </nav>
 </div>
  </header>

<% if flash[:notice] %>
<p id=notice><%= flash[:notice] %></p>
<% end %>

<div class="body">
    <%= yield %>
</div>

  </body>
</html>
